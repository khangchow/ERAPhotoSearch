<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.era.photosearch.presentation.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_homeFragment_to_photoDetailsFragment"
            app:destination="@id/photoDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.era.photosearch.presentation.search.SearchFragment"
        android:label=""
        tools:layout="@layout/fragment_search">
        <argument
            android:name="searchQuery"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/photoDetailsFragment"
        android:name="com.era.photosearch.presentation.photo_details.PhotoDetailsFragment"
        android:label="Photo Details"
        tools:layout="@layout/fragment_photo_details">
        <argument
            android:name="photoInfo"
            app:argType="com.era.photosearch.model.response.PhotoInfo" />
        <argument
            android:name="transitionName"
            app:argType="string" />
        <action
            android:id="@+id/action_photoDetailsFragment_to_selectPhotoSizeBottomSheetDialogFragment"
            app:destination="@id/selectPhotoSizeBottomSheetDialogFragment" />
    </fragment>
    <fragment
        android:id="@+id/webViewFragment"
        android:name="com.era.photosearch.presentation.webview.WebViewFragment"
        android:label="Web View"
        tools:layout="@layout/fragment_webview">
        <argument
            android:name="url"
            app:argType="string" />
    </fragment>
    <action
        android:id="@+id/action_global_webViewFragment"
        app:destination="@id/webViewFragment" />
    <dialog
        android:id="@+id/selectPhotoSizeBottomSheetDialogFragment"
        android:name="com.era.photosearch.presentation.select_photo_size.SelectPhotoSizeBottomSheetDialogFragment"
        android:label="SelectPhotoSizeBottomSheetDialogFragment"
        tools:layout="@layout/bottom_sheet_select_photo_size">
        <argument
            android:name="size"
            app:argType="com.era.photosearch.util.PhotoSize" />
    </dialog>
</navigation>